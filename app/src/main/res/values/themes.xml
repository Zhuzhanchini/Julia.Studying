<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/coolcolor1</item>
    <item name="colorPrimaryVariant">@color/coolcolor4</item>
    <item name="colorOnPrimary">@color/coolcolor5</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/coolcolor5</item>
    <item name="colorSecondaryVariant">@color/coolcolor4</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->

    <item name="android:textViewStyle">@style/Theme.MyApplication.TextView </item>
    </style>


    <style name="Theme.MyApplication.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/coolcolor3</item>

    </style>

    <style name="Theme.MyApplication.ButtonView1">
        <item name="android:backgroundTint">@color/coolcolor6</item>
        <item name="android:textColor">@color/coolcolor3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.MyApplication.ButtonView2">
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="Theme.MyApplication.ButtonView3">
        <item name="android:backgroundTint">@color/coolcolor5</item>

    </style>

</resources>